Accept: application/json

{
  "events": [
    { "type": "PURCHASE", "user_id": 1, "game_id": 101, "ts": "2025-11-18T12:00:00Z" },
    { "type": "VIEW",     "user_id": 1, "game_id": 102, "ts": "2025-11-18T12:05:00Z" },
    { "type": "RATING",   "user_id": 1, "game_id": 103, "value": 4.5, "ts": "2025-11-18T12:10:00Z" }
  ]
}

